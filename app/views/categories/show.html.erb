<p id="notice"><%= notice %></p>
<div class="container">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
       <th colspan="2"><center>Article Details</center></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><strong>Name:</strong></td>
        <td><%= @category.name %></td>
      </tr>
    </tbody>
  </table>

<h2>Sub Categories</h2>
  <% if @category.sub_categories.any? %>
  <ul>
    <% @category.sub_categories.each do |sub_category| %>
      <li><%= link_to sub_category, sub_category %></li>
    <% end %>
  </ul>
  <% else %>
    <p> none available </p>
  <% end %>
</div>

<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-info" %> 
<%= link_to 'Back', categories_path, class: "btn  btn-secondary" %>
